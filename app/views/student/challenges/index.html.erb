  <div class="row content stmanage">
      <div class="col-sm-4 col-xs-6 sidenavbar">
        <h4 class="nickname text-center"><%= current_user.name %></h4>
        <p><%= image_tag 'kid.jpg', class: 'stavatar-large'%></p>
        <ul class="nav nav-pills navbar-stacked">
          <li>
            <%= link_to 'Playground', student_profile_path, class:"btn sidebar" %>
          </li>

          <li>
            <%= link_to 'History and Progress', history_student_profile_path, class:"btn sidebar" %>
          </li>
        </ul><br>
      </div>

      <div class="col-sm-8 col-xs-6 listnotdone">
          <div class="coursesnotdone-wrapper text-center">
              <div id="data">
                  <h2 class = "unfinished">Start a new challenge</h2>
                  <table class="table table-striped">
                    <thead>
                      <td>Title</td>
                      <td>Description</td>
                      <td>Difficulty</td>
                      <td>Category</td>
                    </thead>
                    <tbody class="split" >
                          <% @challenges.each do |challenge| %>
                          <tr>
                            <td><%= link_to student_challenge_path(challenge) do %>
                              <%= challenge.title %>
                              <% end %>
                            </td>
                            <td><%= challenge.description %></td>
                            <td><%= challenge.difficulty %></td>
                            <td><%= challenge.category %></td>
                          </tr>
                        <% end %>
                    </tbody>
                  </table>
              </div>
          </div>
      </div>
  </div>
</div>
