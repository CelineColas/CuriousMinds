<div class="section-background section-background-student"></div>

<div class="section-manager">
  <div class="row">
      <div class="col-sm-4">
        <div class="section-sidenavbar section-sidenavbar-student">
          <%= image_tag 'kid.jpg', class: 'avatar-picture'%>
          <h4 class="nickname text-center"><%= current_user.name %></h4>
          <ul class="nav nav-pills navbar-stacked">
            <li class= "fancy">
              <%= link_to 'Start new Challenge', student_challenges_path, class:"btn sidebar" %>
            </li>
            <li class= "fancy">
              <%= link_to 'History and Progress', history_student_profile_path, class:"btn sidebar" %>
            </li>
            <li class= "fancy">
              <%= link_to 'Edit profile', edit_student_profile_path, class:"btn sidebar" %>
            </li>
          </ul>
        </div>
      </div>

      <div class="col-sm-8">
        <h2 class="emperor">Playground</h2>
        <div class="listnotdone">
          <div class="coursesnotdone-wrapper text-center">
              <div id="data">
                  <table class="table table-striped intable">
                    <thead class="headersA">
                      <td class="headerA">Challenge</td>
                      <td class="headerA">Teacher</td>
                      <td class="headerA">Progress</td>
                    </thead>
                    <tbody class="split" >
                      <% @unfinished_quests.each do |quest| %>
                        <tr>
                          <td class = "celltwo"> <%= quest.challenge.title %></td>
                          <td class = "celltwo"> <%= quest.challenge.teacher.name %> </td>
                          <td class = "celltwo"> <%= quest.correct_percentage %>% </td>
                        </tr>
                        <% end %>
                    </tbody>
                  </table>
              </div>
          </div>

        </div>
      </div>
  </div>
</div>

